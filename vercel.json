{
  "version": 2,
  "rewrites": [
    {
      "source": "/product/:slug",
      "destination": "/index_tact-mirror.html"
    },
    {
      "source": "/category/:slug",
      "destination": "/index_decor.html"
    },
    {
      "source": "/index_decor/category/:slug",
      "destination": "/index_decor.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://furniture-backend-1-nvv3.onrender.com/api/$1"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://furniture-backend-1-nvv3.onrender.com/sitemap.xml"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
